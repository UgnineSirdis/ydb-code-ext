{
  "name": "vibedb",
  "displayName": "VibeDB",
  "description": "Extension for YDB developers that helps to do everyday job",
  "version": "0.0.1",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/UgnineSirdis/vibe-db-extension"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibedb.createLocalYdb",
        "title": "New local-ydb",
        "icon": "$(add)"
      },
      {
        "command": "vibedb.refreshLocalYdb",
        "title": "Refresh local-ydb list",
        "icon": "$(refresh)"
      },
      {
        "command": "vibedb.startLocalYdb",
        "title": "Start/restart",
        "icon": "$(notebook-execute)"
      },
      {
        "command": "vibedb.stopLocalYdb",
        "title": "Stop",
        "icon": "$(notebook-stop)"
      },
      {
        "command": "vibedb.deleteLocalYdb",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "vibedb.editConfigLocalYdb",
        "title": "Edit Config",
        "icon": "$(wrench)"
      },
      {
        "command": "vibedb.openLogsLocalYdb",
        "title": "Open Logs",
        "icon": "$(output)"
      }
    ],
    "views": {
      "debug": [
        {
          "id": "local-ydb",
          "name": "Local YDB",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vibedb.createLocalYdb",
          "when": "view == local-ydb",
          "group": "navigation"
        },
        {
          "command": "vibedb.refreshLocalYdb",
          "when": "view == local-ydb",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vibedb.startLocalYdb",
          "when": "view == local-ydb && viewItem == localYdb",
          "group": "inline@1"
        },
        {
          "command": "vibedb.stopLocalYdb",
          "when": "view == local-ydb && viewItem == localYdb",
          "group": "inline@2"
        },
        {
          "command": "vibedb.deleteLocalYdb",
          "when": "view == local-ydb && viewItem == localYdb",
          "group": "inline@3"
        },
        {
          "command": "vibedb.editConfigLocalYdb",
          "when": "view == local-ydb && viewItem == localYdb",
          "group": "inline@4"
        },
        {
          "command": "vibedb.openLogsLocalYdb",
          "when": "view == local-ydb && viewItem == localYdb",
          "group": "inline@5"
        },
        {
          "command": "vibedb.startLocalYdb",
          "when": "view == local-ydb && viewItem == localYdb",
          "group": "actions"
        },
        {
          "command": "vibedb.stopLocalYdb",
          "when": "view == local-ydb && viewItem == localYdb",
          "group": "actions"
        },
        {
          "command": "vibedb.deleteLocalYdb",
          "when": "view == local-ydb && viewItem == localYdb",
          "group": "actions"
        },
        {
          "command": "vibedb.editConfigLocalYdb",
          "when": "view == local-ydb && viewItem == localYdb",
          "group": "actions"
        },
        {
          "command": "vibedb.openLogsLocalYdb",
          "when": "view == local-ydb && viewItem == localYdb",
          "group": "actions"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
